# Core Services
# PROM_URL=http://localhost:9090
# MONGO_URI=mongodb://localhost:27017
# BATCH_INTERVAL_MINUTES=1

# LLM Provider (openai or ollama)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
# LLM_URL=any url # For Ollama

# Authentication
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(64))"
# JWT_SECRET_KEY=change-me-to-a-secure-secret-in-production
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=15
# REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
# ENABLE_RATE_LIMITING=true
# AUTH_RATE_LIMIT=5/minute
# API_RATE_LIMIT=100/minute

# Environment
# ENVIRONMENT=development
# FRONTEND_URL=http://localhost:5173

# Email Alerts (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Langfuse Tracking (Optional)
# LANGFUSE_PUBLIC_KEY=pk-lf-...
